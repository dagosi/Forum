<h1>Topic <%= @topic.title %></h1>

<table>
  <tr>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.body %></td>
    <td><%= link_to 'Show', [comment.topic, comment] %></td>
    <td><%= link_to 'Edit', edit_topic_comment_path(comment.topic, comment) %></td>
    <td><%= link_to 'Destroy', [comment.topic, comment], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

